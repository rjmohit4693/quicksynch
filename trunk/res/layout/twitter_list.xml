<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+twitterList/TweetLayout"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/twitter_back">
	<LinearLayout
		android:id="@+twitterList/tweet"
		android:layout_width="match_parent"
		android:layout_height="120dip"
		android:background="@drawable/tweet_background"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:orientation="vertical">
		<EditText
			android:id="@+twitterList/tweet_text"
			android:layout_width="fill_parent"
			android:layout_height="70dip"
			android:padding="5dip"/>
		<LinearLayout
			android:orientation = "horizontal"
			android:layout_width = "fill_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "5dip"
			android:layout_marginRight = "5dip"
			android:layout_marginBottom = "3dip">
			<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "Characters Left :"
				android:textColor = "#FFFFFFFF"/>
			<TextView
				android:id = "@+twitterList/charsLeft"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginLeft = "10dip"
				android:text = "140"/>
			<View
				android:layout_width = "0dip"
				android:layout_height = "0dip"
				android:layout_weight = "1"/>
			<Button
				android:id = "@+twitterList/tweet_button"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "Tweet"
				android:layout_marginRight = "5dip"/>
		</LinearLayout>
	</LinearLayout>
	<ListView
		android:id="@+twitterList/friendsTimeLine"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	</ListView>
</LinearLayout>
